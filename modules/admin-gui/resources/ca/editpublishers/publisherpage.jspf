        <strong><%= ejbcawebbean.getText("NAME") %></strong>
      </td>
      <td width="55%"> 
        <strong><c:out value="<%= publisherhelper.publishername %>"/></strong>
      </td>
    </tr>
    <form name="publishertype" method="post" action="<%=THIS_FILENAME %>">
      <input type="hidden" name='<%= EditPublisherJSPHelper.ACTION %>' value='<%=EditPublisherJSPHelper.ACTION_CHANGE_PUBLISHERTYPE %>'>
      <input type="hidden" name='<%= EditPublisherJSPHelper.HIDDEN_PUBLISHERNAME %>' value='<c:out value="<%= publisherhelper.publishername %>"/>'>
    <tr  id="Row<%=row++%2%>"> 
      <td width="45%"  align="right"> 
        <%= ejbcawebbean.getText("PUBLISHERTYPE") %>
      </td>
      <td width="55%">
        <select name="<%=EditPublisherJSPHelper.SELECT_PUBLISHERTYPE%>" size="1" onchange='document.publishertype.submit()'>
           <%  int currenttype = publisherhelper.getPublisherType(); 
               for (int i=0; i<publishertypes.length;i++) {
            	   if (publishertypes[i]==PublisherConst.TYPE_CUSTOMPUBLISHERCONTAINER) {
            		   boolean selectGeneric = currenttype==PublisherConst.TYPE_CUSTOMPUBLISHERCONTAINER;
                       for (String klass : publisherhelper.getCustomClasses()) {
                    	   boolean selectThis = false;
                    	   if (currenttype==PublisherConst.TYPE_CUSTOMPUBLISHERCONTAINER) {
                        	   CustomPublisherContainer custompublisher = (CustomPublisherContainer) publisherhelper.publisherdata;
                               String currentClass = custompublisher.getClassPath();
                               if (klass.equals(currentClass)) {
                            	   selectThis = true;
                            	   selectGeneric = false;
                               }
                    	   }
                       %>
			           <option value="<%= PublisherConst.TYPE_CUSTOMPUBLISHERCONTAINER + "-" + klass %>" 
		            	  <% if(selectThis) { out.write(" selected "); } %>>
    		        	  <%= ejbcawebbean.getText(publishertypetexts[i]) + " - " + klass.substring(klass.lastIndexOf('.')+1) %>
        			   </option>
           <%          }
                       if (org.ejbca.config.WebConfiguration.isManualClassPathsEnabled()) { %>
			           <option value="<%= PublisherConst.TYPE_CUSTOMPUBLISHERCONTAINER %>" 
		            	  <% if(selectGeneric) { out.write(" selected "); } %>> 
    		        	  <%= ejbcawebbean.getText(publishertypetexts[i])%>
        			   </option>
           <%          }
                   } else { %>
			           <option  value="<%= publishertypes[i] %>" 
			              <% if(publishertypes[i] == currenttype) out.write(" selected "); %>> 
			              <%= ejbcawebbean.getText(publishertypetexts[i]) %>
			           </option>
           <%	   }
              } %> 
        </select>
      </td>
    </tr>
   </form>
   </table>
   
   <form name="editpublisher" method="post" action="<%=THIS_FILENAME %>">
