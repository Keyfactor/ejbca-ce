           <%
           		int[] times = publisherhelper.getPublisherQueueLength(new int[]{0, 1*60, 10*60, 60*60}, new int[]{1*60, 10*60, 60*60, -1});
 				for(int i = 0; i < times.length; i++) {
 					if(i != 0) {
 						out.write(", ");
 					}
 					out.write(""+times[i]);
 				}
           %>
      </td>
    </tr>
