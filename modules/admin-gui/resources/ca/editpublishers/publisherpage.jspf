    <tr id="Row<%=row++%2%>"> 
      <td width="45%" valign="top" align="left"> 
        &nbsp;
      </td>
      <td width="55%" valign="top" align="right"> 
        <a href="<%=THIS_FILENAME %>"><%= ejbcawebbean.getText("BACKTOPUBLISHERS") %></a>
