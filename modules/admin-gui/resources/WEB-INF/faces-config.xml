<faces-config version="2.0"
    metadata-complete="false"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
                        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

  <managed-bean>
    <managed-bean-name>web</managed-bean-name>
    <managed-bean-class>org.ejbca.ui.web.admin.configuration.EjbcaJSFHelper</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>listApproveActionManagedBean</managed-bean-name>
    <managed-bean-class>org.ejbca.ui.web.admin.approval.ListApproveActionManagedBean</managed-bean-class>
    <managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    <managed-bean-name>approvalActionRequest</managed-bean-name>
    <managed-bean-class>org.ejbca.ui.web.admin.approval.ApproveActionRequestBean</managed-bean-class>
    <managed-bean-scope>request</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>auditor</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.audit.AuditorManagedBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>listServicesManagedBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.services.ListServicesManagedBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>editService</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.services.EditServiceManagedBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>certProfilesBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.certprof.CertProfilesBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>certProfileBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.certprof.CertProfileBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    	<managed-property>
    	    <property-name>certProfilesBean</property-name>
    	    <value>#{certProfilesBean}</value>
    	</managed-property>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>validatorsBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.keys.validation.ValidatorsBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>validatorBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.keys.validation.ValidatorBean</managed-bean-class>
    	<managed-bean-scope>view</managed-bean-scope>
    	<managed-property>
    	    <property-name>validatorsBean</property-name>
    	    <value>#{validatorsBean}</value>
    	</managed-property>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>internalKeyBindingMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.keybind.InternalKeyBindingMBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>peerConnectorsMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.peerconnector.PeerConnectorsMBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>peerConnectorMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.peerconnector.PeerConnectorMBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
    	    <property-name>peerConnectorsMBean</property-name>
    	    <value>#{peerConnectorsMBean}</value>
    	</managed-property>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>peerMgmtMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.peerconnector.PeerMgmtMBean</managed-bean-class>
    	<managed-bean-scope>request</managed-bean-scope>
    	<managed-property>
    	    <property-name>peerConnectorsMBean</property-name>
    	    <value>#{peerConnectorsMBean}</value>
    	</managed-property>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>scepConfigMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.configuration.ScepConfigMBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  <managed-bean>
    	<managed-bean-name>acmeConfigMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.acme.AcmeConfigMBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
    <managed-bean>
    	<managed-bean-name>systemConfigMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.configuration.SystemConfigMBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
  </managed-bean>
  
  <managed-bean>
    	<managed-bean-name>customCertExtensionMBean</managed-bean-name>
    	<managed-bean-class>org.ejbca.ui.web.admin.configuration.CustomCertExtensionMBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    	<managed-property>
    	    <property-name>systemConfigMBean</property-name>
    	    <value>#{systemConfigMBean}</value>
    	</managed-property>
  </managed-bean>
  
  <validator>
        <validator-id>dummyValidator</validator-id>
        <validator-class>org.ejbca.util.validator.DummyValidator</validator-class>
  </validator>
  <validator>
        <validator-id>legalCharsValidator</validator-id>
        <validator-class>org.ejbca.ui.web.admin.LegalCharsValidator</validator-class>
  </validator>
  <validator>
        <validator-id>multiLineFreeTextValidator</validator-id>
        <validator-class>org.ejbca.ui.web.admin.MultiLineFreeTextValidator</validator-class>
  </validator>
  <validator>
        <validator-id>urlValidator</validator-id>
        <validator-class>org.ejbca.ui.web.admin.UrlValidator</validator-class>
  </validator>
  <validator>
        <validator-id>hexSerialNumberValidator</validator-id>
        <validator-class>org.ejbca.ui.web.admin.HexSerialNumberValidator</validator-class>
  </validator>
  <validator>
        <validator-id>noNegativeNumbersValidator</validator-id>
        <validator-class>org.ejbca.util.validator.NoNegativeNumbersValidator</validator-class>
  </validator>
  <validator>
        <validator-id>optionalHexSerialNumberValidator</validator-id>
        <validator-class>org.ejbca.ui.web.admin.OptionalHexSerialNumberValidator</validator-class>
  </validator>
  <validator>
        <validator-id>positiveIntegerValidator</validator-id>
        <validator-class>org.ejbca.util.validator.PositiveIntegerValidator</validator-class>
  </validator>
  <validator>
        <validator-id>simpleTimeValidator</validator-id>
        <validator-class>org.ejbca.ui.web.admin.SimpleTimeValidator</validator-class>
  </validator>
  <validator>
        <validator-id>validityDateValidator</validator-id>
        <validator-class>org.ejbca.ui.web.admin.ValidityDateValidator</validator-class>
  </validator>
    <validator>
        <validator-id>minSmallerThanMaxValidator</validator-id>
        <validator-class>org.ejbca.util.validator.MinSmallerThanMaxValidator</validator-class>
  </validator>

  <converter>
        <converter-id>mapToStringConverter</converter-id>
        <converter-class>org.ejbca.ui.web.admin.audit.MapToStringConverter</converter-class>
  </converter>

  <navigation-rule>
    <from-view-id>/approval/approveactionlist.jsp</from-view-id>
    <navigation-case>
      <from-outcome>viewApproveAction</from-outcome>
      <to-view-id>/approval/approveaction.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/approval/approveaction.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>approveaction</from-outcome>
  		<to-view-id>/approval/approveaction.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/ca/caactivation.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>apply</from-outcome>
      <to-view-id>/ca/caactivation.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/ca/editcertificateprofiles/editcertificateprofiles.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>edit</from-outcome>
      <to-view-id>/ca/editcertificateprofiles/editcertificateprofile.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>view</from-outcome>
      <to-view-id>/ca/editcertificateprofiles/editcertificateprofile.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/ca/editcertificateprofiles/editcertificateprofile.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>done</from-outcome>
      <to-view-id>/ca/editcertificateprofiles/editcertificateprofiles.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/ca/editvalidators/editvalidators.xhtml</from-view-id>
    <navigation-case>
      <from-action>#{validatorsBean.actionEdit}</from-action>
      <from-outcome>edit</from-outcome>
      <to-view-id>/ca/editvalidators/editvalidator.xhtml</to-view-id>
      <redirect include-view-params="true"></redirect>
    </navigation-case>
    <navigation-case>
      <from-outcome>view</from-outcome>
      <to-view-id>/ca/editvalidators/editvalidator.xhtml</to-view-id>
      <redirect include-view-params="true"></redirect>
    </navigation-case>
    <navigation-case>
      <from-action>#{validatorsBean.#{validatorsBean.actionRenameConfirm}}</from-action>
      <to-view-id>/ca/editvalidators/editvalidators.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{validatorsBean.#{validatorsBean.actionDeleteConfirm}}</from-action>
      <to-view-id>/ca/editvalidators/editvalidators.xhtml</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-action>#{validatorsBean.#{validatorsBean.actionAddFromTemplateConfirm}}</from-action>
      <to-view-id>/ca/editvalidators/editvalidators.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/ca/editvalidators/editvalidator.xhtml</from-view-id>
    <navigation-case>
      <from-outcome>done</from-outcome>
      <to-view-id>/ca/editvalidators/editvalidators.xhtml</to-view-id>
    </navigation-case>
  </navigation-rule>
  
    <navigation-rule>
    <from-view-id>/approval/editapprovalprofiles.jsp</from-view-id>
    <navigation-case>
      <from-outcome>edit</from-outcome>
      <to-view-id>/approval/editapprovalprofile.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>view</from-outcome>
      <to-view-id>/approval/editapprovalprofile.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  <navigation-rule>
    <from-view-id>/approval/editapprovalprofile.jsp</from-view-id>
    <navigation-case>
      <from-outcome>done</from-outcome>
      <to-view-id>/approval/editapprovalprofiles.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/sysconfig/systemconfiguration.jsp</from-view-id>
    <navigation-case>
      <from-outcome>edit</from-outcome>
      <to-view-id>/sysconfig/customcertextension.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>view</from-outcome>
      <to-view-id>/sysconfig/customcertextension.jsp</to-view-id>
    </navigation-case>
    <navigation-case>
      <from-outcome>editCTLog</from-outcome>
      <to-view-id>/sysconfig/editctlog.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  
  <navigation-rule>
    <from-view-id>/sysconfig/editctlog.jsp</from-view-id>
    <navigation-case>
      <from-outcome>saved</from-outcome>
      <to-view-id>/sysconfig/systemconfiguration.jsp</to-view-id>
    </navigation-case>
  </navigation-rule>
  	
  <navigation-rule>
  	<from-view-id>/services/listservices.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>listservices</from-outcome>
  		<to-view-id>/services/listservices.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>editservice</from-outcome>
  		<to-view-id>/services/editservice.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/services/editservice.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>listservices</from-outcome>
  		<to-view-id>/services/listservices.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>editservice</from-outcome>
  		<to-view-id>/services/editservice.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>

  <navigation-rule>
  	<from-view-id>/peerconnector/peerconnectors.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>edit</from-outcome>
  		<to-view-id>/peerconnector/peerconnector.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>done</from-outcome>
  		<to-view-id>/peerconnector/peerconnectors.jsp</to-view-id>
  	</navigation-case>
  	<navigation-case>
  		<from-outcome>manage</from-outcome>
  		<to-view-id>/peerconnector/peermgmt.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/peerconnector/peerconnector.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>done</from-outcome>
  		<to-view-id>/peerconnector/peerconnectors.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
  <navigation-rule>
  	<from-view-id>/peerconnector/peermgmt.jsp</from-view-id>
  	<navigation-case>
  		<from-outcome>done</from-outcome>
  		<to-view-id>/peerconnector/peerconnectors.jsp</to-view-id>
  	</navigation-case>
  </navigation-rule>
</faces-config>
