<?xml version="1.0" encoding="UTF-8"?>
<project name="ejbca-rest-certificate" default="build">
    <description>
            Build files for the EJBCA Certificate REST module
    </description>

	<dirname property="ejbca-rest-certificate.dir" file="${ant.file.ejbca-rest-certificate}"/>

    <import file="${ejbca-rest-certificate.dir}/../build-helpers.xml"/>

	<property name="ejbca-rest-certificate.build.dir" location="${ejbca-rest-certificate.dir}/build"/>
	<property name="ejbca-rest-certificate.build-test.dir" location="${ejbca-rest-certificate.dir}/build-test"/>
	<property name="ejbca-rest-certificate.src.dir" location="${ejbca-rest-certificate.dir}/src"/>
	<property name="ejbca-rest-certificate.src-test.dir" location="${ejbca-rest-certificate.dir}/src-test"/>
	<property name="ejbca-rest-certificate.resources.dir" location="${ejbca-rest-certificate.dir}/resources"/>

	<path id="compile.classpath">
		<path refid="lib.ejbca-common-web.classpath"/>
		<path refid="lib.bouncycastle.classpath"/>
		<path refid="lib.log4j.classpath"/>
		<path refid="lib.commons-lang.classpath"/>
		<path refid="lib.commons-collections.classpath"/>
		<path refid="lib.commons-io.classpath"/>
		<path refid="lib.jee.classpath"/>
        <path refid="lib.json-simple.classpath"/>
        <path refid="lib.json-smart.classpath"/>
        <path refid="lib.nimbus-jose-jwt.classpath"/>
		<path refid="lib.swagger.classpath"/>
        <path refid="lib.jackson2.classpath"/>
        <path location="${mod.ejbca-entity.lib}"/>
        <path location="${mod.cesecore-entity.lib}"/>
        <path location="${mod.cesecore-common.lib}"/>
        <path location="${mod.cesecore-ejb-interface.lib}"/>
		<path location="${mod.ejbca-rest-common.lib}"/>
		<path refid="lib.jboss-logging.classpath"/>
	</path>

	<path id="compile-test.classpath">
		<path refid="compile.classpath"/>
		<path refid="lib.junit.classpath"/>
		<path location="${ejbca-rest-certificate.build.dir}/WEB-INF/classes"/>
		<path location="${ejbca-rest-certificate.dir}/../dist/systemtests-interfaces.jar"/>
		<path location="${ejbca-rest-certificate.dir}/../dist/systemtests-common.jar"/>
		<path location="${ejbca-rest-certificate.dir}/../dist/systemtests-ejb.jar"/>
		<path location="${mod.ejbca-ejb.lib}"/>
		<path refid="lib.test.classpath"/>
        <path refid="lib.resteasy-jaxrs.classpath"/>
		<path location="${mod.cesecore-x509ca.lib}"/>
        <path location="${mod.cesecore-cvcca.lib}"/>
        <path location="${mod.ejbca-rest-certificate.lib}"/>
	</path>

	<path id="test.classpath">
        <path refid="compile-test.classpath"/>
		<path location="${ejbca-rest-certificate.build-test.dir}"/>
        <path refid="lib.jee-client.classpath"/>
	</path>

    <target name="clean" description="Clean up this module">
		<delete dir="${ejbca-rest-certificate.build.dir}"/>
		<delete dir="${ejbca-rest-certificate.build-test.dir}"/>
    	<delete file="${mod.ejbca-rest-certificate.jar}"/>
    </target>

    <target name="build" description="Build this module" depends="compile">
        <jar destfile="${mod.ejbca-rest-certificate.lib}" basedir="${ejbca-rest-certificate.build.dir}" includes="**/*.class **/*.xml" />
    </target>

	<target name="compile" depends="setup">
        <javac srcdir="${ejbca-rest-certificate.src.dir}" destdir="${ejbca-rest-certificate.build.dir}" debug="on" includeantruntime="no" encoding="UTF-8" target="${java.target.version}"
        	classpathref="compile.classpath"/>
    </target>

	<target name="setup">
		<mkdir dir="${ejbca-rest-certificate.build.dir}/WEB-INF/classes"/>
	</target>

	<target name="compile-tests" depends="build">
		<mkdir dir="${ejbca-rest-certificate.build-test.dir}" />
		<copy file="${log4j.test.file}" tofile="${ejbca-rest-certificate.build-test.dir}/log4j.xml" failonerror="true"/>
		<copy file="${jndi.properties.file}" tofile="${ejbca-rest-certificate.build-test.dir}/jndi.properties" failonerror="true"/>
		<copy file="${jboss-ejb-client.properties}" todir="${ejbca-rest-certificate.build-test.dir}" failonerror="true"/>
		<javac srcdir="${ejbca-rest-certificate.src-test.dir}" destdir="${ejbca-rest-certificate.build-test.dir}" debug="on" includeantruntime="no"
        	encoding="iso8859-1" target="${java.target.version}" classpathref="compile-test.classpath">
			<sourcepath location="${mod.systemtests.path}/src-test/"/>
			<sourcepath location="${mod.systemtests.path}/src-interface/"/>
		</javac>
		<copy file="${internal.properties.file}" todir="${ejbca-rest-certificate.build-test.dir}" failonerror="true"/>
	</target>

	<target name="test:unit" depends="compile-tests" description="Run unit tests for this module">
		<antcall target="showtime" inheritall="true" inheritrefs="true"/>
		<condition property="remoteDebugJvmArgs"
				value="-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=8787"
				else="-ea">
			<istrue value="${remoteDebug}"/>
		</condition>
		<junit printsummary="yes" haltonfailure="no" showoutput="${test.showoutput}" dir="/" fork="true" forkmode="once">
			<classpath>
				<path refid="test.classpath"/>
			</classpath>
			<formatter type="xml" />
			<batchtest fork="yes" todir="${reports.dir}">
				<fileset dir="${ejbca-rest-certificate.build-test.dir}" includes="**/*UnitTest.class"/>
			</batchtest>
			<jvmarg line="${tests.jvmargs}"/>
			<jvmarg value="${remoteDebugJvmArgs}"/>
		</junit>
		<antcall target="showtime" inheritall="true" inheritrefs="true"/>
	</target>

	<target name="test:system" depends="compile-tests" description="Run system tests for this module">
		<antcall target="showtime" inheritall="true" inheritrefs="true"/>
		<condition property="remoteDebugJvmArgs"
				value="-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=8787"
				else="-ea">
			<istrue value="${remoteDebug}"/>
		</condition>
		<junit printsummary="yes" haltonfailure="no" showoutput="${test.showoutput}" dir="/" fork="true">
			<classpath>
				<path refid="test.classpath"/>
			</classpath>
			<formatter type="xml" />
			<batchtest fork="yes" todir="${reports.dir}">
				<fileset dir="${ejbca-rest-certificate.build-test.dir}" includes="**/*SystemTest.class"/>
			</batchtest>
			<jvmarg line="${tests.jvmargs}"/>
			<jvmarg value="${remoteDebugJvmArgs}"/>
		</junit>
		<antcall target="showtime" inheritall="true" inheritrefs="true"/>
	</target>

	<target name="runone" depends="compile-tests">
		<fail message="'test.runone' is not set. Example -Dtest.runone=SomeTest . You can also use -Dtest.showoutput=true to send test output to console." unless="test.runone" />
		<junit printsummary="yes" haltonfailure="no" showoutput="${test.showoutput}">
			<classpath>
        		<path refid="test.classpath"/>
			</classpath>
			<formatter type="xml" />
			<batchtest fork="yes" todir="${reports.dir}">
				<fileset dir="${ejbca-rest-certificate.build-test.dir}" includes="**/${test.runone}.class"/>
			</batchtest>
			<jvmarg line="${tests.jvmargs}"/>
		</junit>
	</target>
</project>
