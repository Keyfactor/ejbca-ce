<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="1.0"
    xmlns="http://java.sun.com/xml/ns/persistence/orm"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_1_0.xsd">

    <!--
        Stripped down ORM file for the External OCSP Responder.
        Only contains necessary mapping for CertificateData.

        Keep this in sync with orm-{ejbca|ocsp}-{database}.xml!
    -->

    <entity class="org.ejbca.core.ejb.ca.store.CertificateData" access="PROPERTY" metadata-complete="false">
        <attributes>
            <id name="fingerprint"><column name="fingerprint" column-definition="VARCHAR(255)"/></id>
            <basic name="issuerDN"><column name="issuerDN" column-definition="VARCHAR(255)" nullable="false"/></basic>
            <basic name="subjectDN"><column name="subjectDN" column-definition="VARCHAR(255)" nullable="false"/></basic>
            <basic name="caFingerprint"><column name="cAFingerprint" column-definition="VARCHAR(255)"/></basic>
            <basic name="status"><column name="status" column-definition="INTEGER" nullable="false"/></basic>
            <basic name="type"><column name="type" column-definition="INTEGER" nullable="false"/></basic>
            <basic name="serialNumber"><column name="serialNumber" column-definition="VARCHAR(255)" nullable="false"/></basic>
            <basic name="expireDate"><column name="expireDate" column-definition="DECIMAL(20,0)" nullable="false"/></basic>
            <basic name="revocationDate"><column name="revocationDate" column-definition="DECIMAL(20,0)" nullable="false"/></basic>
            <basic name="revocationReason"><column name="revocationReason" column-definition="INTEGER" nullable="false"/></basic>
            <!-- We need to allow this field to be null in external OCSP responder mode and it's easier if the tables look the same! -->
            <basic name="base64Cert"><column name="base64Cert" column-definition="TEXT"/><lob/></basic>
            <basic name="username"><column name="username" column-definition="VARCHAR(255)"/></basic>
            <basic name="tag"><column name="tag" column-definition="VARCHAR(255)"/></basic>
            <basic name="certificateProfileId"><column name="certificateProfileId" column-definition="INTEGER" nullable="false"/></basic>
            <basic name="updateTime"><column name="updateTime" column-definition="DECIMAL(20,0)" nullable="false"/></basic>
            <basic name="subjectKeyId"><column name="subjectKeyId" column-definition="VARCHAR(255)"/></basic>
            <basic name="rowProtection"><column name="rowProtection" column-definition="TEXT"/><lob/></basic>
            <version name="rowVersion"><column name="rowVersion" column-definition="INTEGER" nullable="false"/></version>
        </attributes>
    </entity>
    <entity class="org.ejbca.core.ejb.ca.store.CRLData" access="PROPERTY" metadata-complete="false">
        <attributes>
            <id name="fingerprint"><column name="fingerprint" column-definition="VARCHAR(255)"/></id>
            <basic name="crlNumber"><column name="cRLNumber" column-definition="INTEGER" nullable="false"/></basic>
            <basic name="issuerDN"><column name="issuerDN" column-definition="VARCHAR(255)" nullable="false"/></basic>
            <basic name="caFingerprint"><column name="cAFingerprint" column-definition="VARCHAR(255)" nullable="false"/></basic>
            <basic name="thisUpdate"><column name="thisUpdate" column-definition="DECIMAL(20,0)" nullable="false"/></basic>
            <basic name="nextUpdate"><column name="nextUpdate" column-definition="DECIMAL(20,0)" nullable="false"/></basic>
            <basic name="deltaCRLIndicator"><column name="deltaCRLIndicator" column-definition="INTEGER" nullable="false"/></basic>
            <basic name="base64Crl"><column name="base64Crl" column-definition="TEXT" nullable="false"/><lob/></basic>
            <basic name="rowProtection"><column name="rowProtection" column-definition="TEXT"/><lob/></basic>
            <version name="rowVersion"><column name="rowVersion" column-definition="INTEGER" nullable="false"/></version>
        </attributes>
    </entity>

</entity-mappings>
