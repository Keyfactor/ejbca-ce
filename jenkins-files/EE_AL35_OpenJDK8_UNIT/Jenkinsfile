pipeline {
	agent {
		label "docker"
	}

    stages {
		stage('cleanup') {
            steps {
                sh "docker container rm ee_al35_openjdk8_unit -f || true"
                sh "rm -rf ear"
            }
        }
        stage('run unit tests') {
            steps {
                sh "mkdir ear"
                sh 'echo "${env.LOCAL_BUILD_PATH}"'

            }
        }
    }
    post {
        always {
            junit "ejbca/**/reports/**/TEST-*.xml"
        }
    }
}
