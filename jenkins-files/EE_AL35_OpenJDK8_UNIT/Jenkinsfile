pipeline {
	agent {
		label "docker"
	}
    
    stages {
		stage('verify workspace is clean') {
            steps {
                sh "docker container rm ee_al35_openjdk8_unit -f || true"
                sh "rm -rf ear"
            }
        }
        stage('run unit tests') {
            steps {
                sh "mkdir ear"
                dir ('ejbca/jenkins-files/EE_AL35_OpenJDK8_UNIT') {
                    sh "docker build -t ee_al35_openjdk8_unit ."
                    sh "docker run --name ee_al35_openjdk8_unit -v " + "$env.WORKSPACE" + ":/app ee_al35_openjdk8_unit"
                }
            }
        }
        stage('cleanup') {
            echo "Remove finished Docker volume..."
            sh "docker container rm ee_al35_openjdk8_unit"
        }
    }
    post {
        always {
            junit "ejbca/**/reports/**/TEST-*.xml"
            cleanWs()
        }
    }
}
