pipeline {
	agent {
		label "docker"
	}
	parameters {
	    string(
	       name:'baseDir',
	       defaultValue:"/hello")
	}

    stages {
		stage('cleanup') {
            steps {
                sh "docker container rm ee_al35_openjdk8_unit -f || true"
                sh "rm -rf ear"
            }
        }
        stage('run unit tests') {
            steps {
                sh "mkdir ear"
                sh 'echo ${params.baseDir}'

            }
        }
    }
    post {
        always {
            junit "ejbca/**/reports/**/TEST-*.xml"
        }
    }
}
