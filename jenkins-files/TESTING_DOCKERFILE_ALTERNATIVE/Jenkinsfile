pipeline {
	agent {
		label "docker"
	}
    
    stages {
		stage('verify workspace is clean') {
            steps {
                sh "docker container rm testing_dockerfile_altenative -f || true"
            }
        }
        stage('run unit tests') {
            agent {
                // Execute this stage's steps inside a running Docker container build according to the following
                dockerfile {
                    label 'docker'
                    dir 'ejbca/jenkins-files/TESTING_DOCKERFILE_ALTERNATIVE'
                    filename 'Dockerfile'
                    additionalBuildArgs  '--disable-content-trust=false --pull'
                    args '--group-add root'
                }
            }
            steps {
                dir ('ejbca') {
                    sh "ant -q -Dappserver.home=/tmp -Dappserver.type=jboss -Dejbca.productionmode=false clean build test:runsa"
                }
                junit "ejbca/**/reports/**/TEST-*.xml"
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
