<web-app version="3.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns="http://java.sun.com/xml/ns/javaee"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

    <display-name>My Web Plugins</display-name>
    
    <servlet>
        <servlet-name>ListCAs</servlet-name>
        <servlet-class>com.example.web.ListCAs</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Counter</servlet-name>
        <servlet-class>com.example.web.Counter</servlet-class>
    </servlet>
 
    <servlet-mapping>
        <servlet-name>ListCAs</servlet-name>
        <url-pattern>/listcas</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Counter</servlet-name>
        <url-pattern>/counter</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>15</session-timeout>
        <tracking-mode>COOKIE</tracking-mode>
        <cookie-config>
            <http-only>true</http-only>
        </cookie-config>
    </session-config>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>restricted methods</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
        </web-resource-collection>
        <auth-constraint />
    </security-constraint> 

</web-app>
