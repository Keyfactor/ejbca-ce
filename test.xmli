                    <exclude name="**/TestRunner*" />
                </fileset>
            </batchtest>
            <batchtest fork="yes" todir="${test.reportsdir}">
                <fileset dir="${test.dir}">
                    <!-- LotsofUsers creates LOOOOTS of users, only run once in a while -->
                    <include name="**/ra/TestAddLotsofUsers*" />
